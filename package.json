{
  "name": "automacao-qa-challenge",
  "version": "1.0.0",
  "description": "Projeto completo de automação de testes QA com Cypress, K6, Appium e CI/CD",
  "main": "index.js",
  "scripts": {
    "api:test": "cypress run --config-file api-tests/cypress.config.js",
    "api:open": "cypress open --config-file api-tests/cypress.config.js",
    "web:test": "cypress run --config-file web-tests/cypress.config.js",
    "web:open": "cypress open --config-file web-tests/cypress.config.js",
    "mobile:test": "cross-env NODE_NO_WARNINGS=1 wdio mobile-tests/appium.conf.js",
    "mobile:appium": "appium",
    "load:test": "k6 run load-tests/scripts/load-test.js",
    "test:all": "npm run api:test && npm run web:test && npm run load:test"
  },
  "keywords": [
    "cypress",
    "k6",
    "appium",
    "automation",
    "qa",
    "testing",
    "e2e"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.2",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "appium-uiautomator2-driver": "^2.34.1",
    "chai": "^6.2.1",
    "cross-env": "^10.1.0",
    "cypress": "^13.6.0",
    "cypress-plugin-api": "^2.11.2",
    "esbuild": "^0.19.8",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@wdio/appium-service": "^8.24.0",
    "@wdio/cli": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/mocha-framework": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "appium": "^2.2.0",
    "dotenv": "^16.3.1",
    "webdriverio": "^8.24.0"
  },
  "directories": {
    "doc": "docs"
  }
}
